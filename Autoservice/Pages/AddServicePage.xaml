<Page x:Class="Autoservice.Pages.AddServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Autoservice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddServicePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 5">
                <TextBlock Text="Название:" Width="200"/>
                <TextBox x:Name="tbxName" MinWidth="200" Margin="10, 0, 0, 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 5">
                <TextBlock Text="Длительность (с):" Width="200"/>
                <TextBox x:Name="tbxDurationInSec" MinWidth="200" Margin="10, 0, 0, 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 5">
                <TextBlock Text="Цена (руб):" Width="200"/>
                <TextBox x:Name="tbxCost" MinWidth="200" Margin="10, 0, 0, 0"/>
            </StackPanel>
            
            <Button Width="120" Content="Сохранить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
